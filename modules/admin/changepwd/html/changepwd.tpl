<div id="pwd-change-form">
    <form class="form-horizontal" align="center">
         <div>
            <label  class="pwd-change-msg" ></label>
        </div>
        
         <fieldset>
             <div class="control-group">
                 <label class="control-label" for="oldPwd">原密码：</label>
                 <div class="controls">
                     <input type="password" class="pwd-old-input" id="oldPwd" name="oldPwd">
                 </div>
                 <label class="pwd-msg-old-label" for="oldPwd"></label>
             </div>
             <div class="control-group">
                 <label class="control-label" for="newPwd">新密码：</label>
                 <div class="controls">
                     <input type="password" class="pwd-new-input" id="newPwd" name="newPwd">
                 </div>
                 <label class="pwd-msg-new-label" for="newPwd"></label>
             </div>
             <div class="control-group">
                 <label class="control-label" for="confirmPwd">确认密码：</label>
                 <div class="controls">
                     <input type="password" class="pwd-confirm-input" id="confirmPwd" name="confirmPwd">
                 </div>
                 <label class="pwd-msg-confirm-label" for="confirmPwd"></label>
             </div>
             
             <div class="form-actions" align="center">
                 <button class="btn btn-primary submit"><i class="icon-ok icon-white"></i>&nbsp;确认</button>
                 <button class="btn clear">清空</button>
             </div>
         </fieldset>
    </form>
   
</div>
